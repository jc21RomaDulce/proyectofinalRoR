<div id="<%= dom_id project %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Nombre:</strong>
    <%= project. title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Descripci√≥n:</strong>
    <%= project.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Image url:</strong>
    <%= project.image_url %>
  </p>

  <p class="my-5">
