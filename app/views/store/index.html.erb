<div class="w-full">
<% if notice.present? %>
<p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
<%= notice %> </p>
<% end %>
<h1 class="font-bold text-xl mb-6 pb-2 border-b-2"> Catalogo de proyectos
</h1>
<ul>
<% @projects.each do |project| %> <li class='flex mb-6'>
<%= image_tag(project.image_url, class: 'object-contain w-40 h-48 shadow mr-6') %>
<div>
<h2 class="font-bold text-lg mb-3"><%= project.title %></h2>
<p>
<%= sanitize(project.description) %> </p>
<div class="mt-3">
<p> Valor del proyecto: 
<%= project.price %> </p>
        </div>
       
        </div>
</li>

<% end %> 

</ul>
<%= link_to "Imprimir PDF" ,projects_url(@project)+".pdf" %>
</div>